<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBDEFB"
    tools:context="com.ariel_bravo_outlook.grouprun.AgregarEvento"
    >




        <android.support.design.widget.FloatingActionButton
            android:id="@+id/confirmarAgregacion"
            android:layout_width="86dp"
            android:layout_height="56dp"


            android:layout_marginBottom="16dp"

            app:backgroundTint="@color/com_facebook_button_background_color_focused"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/guardar"
            tools:layout_editor_absoluteX="282dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/regresarActividadPrincipal"
            android:layout_width="54dp"
            android:layout_height="59dp"


            android:layout_marginBottom="506dp"

            app:backgroundTint="@color/com_facebook_button_background_color_focused"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/regresar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Evento:"
        android:textSize="17dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        android:layout_marginBottom="416dp" />
<EditText
    android:id="@+id/nombreEvento"
    android:layout_width="199dp"
    android:layout_height="48dp"
    android:textColor="@color/colorPrimaryDark"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.972"
    android:layout_marginBottom="403dp"
    />

    <Button
        android:id="@+id/ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="463dp"

        android:backgroundTint="@color/cardview_light_background"
        android:text="Seleccionar Ruta"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.407" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textSize="17dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        android:layout_marginBottom="247dp" />

    <EditText
        android:layout_width="266dp"
        android:layout_height="153dp"
        android:id="@+id/descripcionEvento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="79dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintHorizontal_bias="0.135" />

    <Button
        android:id="@+id/fecha"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="Fecha"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/cardview_light_background"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        android:layout_marginBottom="348dp" />

    <Button
        android:id="@+id/hora"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="Hora"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        android:layout_marginBottom="287dp" />

    <TextView
        android:id="@+id/textviewHora"
        android:layout_width="197dp"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        android:layout_marginBottom="310dp" />

    <TextView
        android:id="@+id/texviewFecha"
        android:layout_width="195dp"
        android:layout_height="wrap_content"


android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        android:layout_marginBottom="369dp" />


</android.support.constraint.ConstraintLayout>
